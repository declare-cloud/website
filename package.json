{
  "name": "website",
  "version": "1.0.0",
  "engines": {
    "bun": ">=1.1.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx,md,json,yml}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "bun test",
    "test:e2e": "playwright test",
    "commit": "cz",
    "release": "standard-version --skip.commit --skip.tag",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write ."
  },
  
  "dependencies": {
    "next": "15.3.3",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.29",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "@testing-library/react": "^16.3.0",
    "@testing-library/jest-dom": "^6.0.0",
    "jest": "^29.7.0",
    "playwright": "^1.44.0",
    "@playwright/test": "^1.44.0",
    "eslint": "^9.28.0",
    "eslint-config-next": "15.3.3",
    "prettier": "^3.2.5",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "standard-version": "^9.5.0",
    "typescript": "^5.4.5",
    "babel-jest": "^29.7.0",
    "identity-obj-proxy": "3.0.0"
  }
}